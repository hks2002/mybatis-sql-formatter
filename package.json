{
  "name": "mybatis-sql-formatter",
  "displayName": "MyBatis SQL Formatter",
  "description": "format MyBatis tag mixed with SQL",
  "publisher": "MerBleueAviation",
  "license": "MIT",
  "version": "1.0.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/hks2002/mybatis-sql-formatter.git"
  },
  "scripts": {
    "compile": "cspell . && node esbuild.config.js",
    "watch": "node esbuild.config.js --watch",
    "lint": "eslint src --ext js",
    "spell-check": "cspell .",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./src/test/runTest.js",
    "vscode:prepublish": "yarn run compile",
    "publish": "vsce publish --yarn --skip-duplicate",
    "package": "vsce package --yarn"
  },
  "dependencies": {
    "sql-formatter": "^15.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "cspell": "^9.6.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "glob": "^11.0.3",
    "globals": "^17.0.0",
    "mocha": "^11.7.1"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "mybatis",
    "sql",
    "formatter"
  ],
  "activationEvents": [
    "onLanguage:xml",
    "onLanguage:sql"
  ],
  "main": "dist/extension.js",
  "l10n": "l10n",
  "contributes": {
    "commands": [
      {
        "command": "mybatis-sql-formatter.format",
        "title": "Format MyBatis SQL"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "MyBatis SQL Formatter",
      "properties": {
         "mybatis-sql-formatter.tabWidth": {
          "order": 0,
          "type": "number",
          "default": 2,
          "description": "%mybatis-sql-formatter.tabWidth%"
        },
         "mybatis-sql-formatter.useTabs": {
          "order": 1,
          "type": "boolean",
          "default": false,
          "description": "%mybatis-sql-formatter.useTabs%"
        },
         "mybatis-sql-formatter.keywordCase": {
          "order": 2,
          "type": "string",
          "enum": ["preserve", "upper", "lower"],
          "default": "preserve",
          "description": "%mybatis-sql-formatter.keywordCase%"
        },
        "mybatis-sql-formatter.identifierCase": {
          "order": 3,
          "type": "string",
          "enum": ["preserve", "upper", "lower"],
          "default": "preserve",
          "description": "%mybatis-sql-formatter.identifierCase%"
        },
        "mybatis-sql-formatter.dataTypeCase": {
          "order": 4,
          "type": "string",
          "enum": ["preserve", "upper", "lower"],
          "default": "preserve",
          "description": "%mybatis-sql-formatter.dataTypeCase%"
        },
        "mybatis-sql-formatter.functionCase": {
          "order": 5,
          "type": "string",
          "enum": ["preserve", "upper", "lower"],
          "default": "preserve",
          "description": "%mybatis-sql-formatter.functionCase%"
        },
        "mybatis-sql-formatter.indentStyle": {
          "order": 6,
          "type": "string",
          "enum": ["standard", "tabularLeft", "tabularRight"],
          "default": "standard",
          "description": "%mybatis-sql-formatter.indentStyle%"
        },
        "mybatis-sql-formatter.logicalOperatorNewline": {
          "order": 7,
          "type": "string",
          "enum": ["before", "after"],
          "default": "before",
          "description": "%mybatis-sql-formatter.logicalOperatorNewline%"
        },
        "mybatis-sql-formatter.expressionWidth": {
          "order": 8,
          "type": "number",
          "default": 50,
          "description": "%mybatis-sql-formatter.expressionWidth%"
        },
        "mybatis-sql-formatter.linesBetweenQueries": {
          "order": 9,
          "type": "number",
          "default": 1,
          "description": "%mybatis-sql-formatter.linesBetweenQueries%"
        },
        "mybatis-sql-formatter.denseOperators": {
          "order": 10,
          "type": "boolean",
          "default": false,
          "description": "%mybatis-sql-formatter.denseOperators%"
        },
        "mybatis-sql-formatter.newlineBeforeSemicolon": {
          "order": 11,
          "type": "boolean",
          "default": false,
          "description": "%mybatis-sql-formatter.newlineBeforeSemicolon%"
        }
      }
    },
    "keybindings": [
      {
        "command": "mybatis-sql-formatter.format",
        "key": "ctrl+win+f",
        "mac": "ctrl+cmd+f",
        "linux": "ctrl+meta+f",
        "when": "editorTextFocus"
      }
    ]
  }
}